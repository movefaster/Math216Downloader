<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>

<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" spacing="10.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller">
   <children>
      <HBox alignment="CENTER" spacing="10.0">
         <children>
            <Label text="Directory: " />
            <TextField fx:id="txtDirectory" HBox.hgrow="ALWAYS" />
            <Button fx:id="btnBrowse" mnemonicParsing="false" onAction="#handleBrowseAction" text="Browse..." />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
      <HBox prefHeight="100.0" prefWidth="200.0" spacing="10.0" VBox.vgrow="ALWAYS">
         <children>
            <ListView fx:id="listExisting" prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS">
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </ListView>
            <ListView fx:id="listAvailable" prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS" />
         </children>
      </HBox>
      <HBox>
         <children>
            <CheckBox fx:id="chkOverwrite" mnemonicParsing="false" text="Overwrite existing" />
            <Region HBox.hgrow="ALWAYS" />
            <ProgressBar fx:id="progressBar" minWidth="-Infinity" prefWidth="300.0" progress="0.0" />
         </children>
      </HBox>
      <HBox alignment="CENTER">
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
         <children>
            <Label fx:id="lblStatus" />
            <Region HBox.hgrow="ALWAYS" />
            <Button fx:id="btnDownload" mnemonicParsing="false" onAction="#handleDownloadAction" text="Download" />
            <Region prefHeight="10.0" prefWidth="10.0" />
            <Button fx:id="btnExit" mnemonicParsing="false" onAction="#handleExitAction" text="Exit" />
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</VBox>
